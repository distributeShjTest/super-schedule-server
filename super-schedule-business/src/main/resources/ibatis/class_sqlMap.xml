<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="class_sql_map">
    <resultMap id="class_map" class="com.su.schedule.model.po.Class">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="query_for_name" parameterClass="java.util.List" resultMap="class_map">
        SELECT id,`name` FROM class WHERE `name` in
        <iterate conjunction="," open="(" close=")">
            #list[]#
        </iterate>

    </select>

    <insert id="insert_class" parameterClass="com.su.schedule.model.po.Class">
        insert into class (`name`) VALUES (#name#)
        <selectKey keyProperty="id" resultClass="java.lang.Integer">
            SELECT LAST_INSERT_ID() as id
        </selectKey>
        ;
    </insert>
</sqlMap> 