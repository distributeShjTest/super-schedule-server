<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="course_sql_map">
    <resultMap id="course_map" class="com.su.schedule.model.po.Course">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="period" column="period" jdbcType="VARCHAR"/>
        <result property="score" column="score" jdbcType="VARCHAR"/>
        <result property="departmId" column="departm_id" jdbcType="INTEGER"/>
    </resultMap>
    
    <select id="query_buffer_course" parameterClass="Integer" resultMap="course_map">
        SELECT `id`,`name`,`period`,`score`,`departm_id` FROM course WHERE departm_id=#departmId#;
    </select>
    
    <insert id="insert_course" parameterClass="java.util.List">
        insert into course (`id`,`name`,`period`,`score`,`departm_id`) VALUES
        <iterate conjunction=",">
            (#list[].id#,#list[].name#,#list[].period#,#list[].score#,#list[].departm_id#)
        </iterate>
    </insert>

</sqlMap>